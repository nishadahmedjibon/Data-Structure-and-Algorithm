#include<bits/stdc++.h>
using namespace std;
int upperbound(int arr[], int n, int target)
{
    int low=0, high= n-1;
    int ans=-1;
    while(low<=high)
    {
        int mid=(low+high)/2;
        if(arr[mid]>=target)
        {
            high=mid-1;
        }
        else if(arr[mid]<=target)
        {
            ans=mid;
            low=mid+1;
        }
    }
    return ans;
}
int main()
{
    int n, target;
    cout<<"Ener the size of the array: ";
    cin>>n;
    int arr[n];
    cout<<"Enter the elements\n";
    for(int i=0; i<n;i++)
    {
        cin>>arr[i];
    }
    cout<<"Enter the target: ";
    cin>>target;
    int index=upperbound(arr, n, target);
    cout<<"The upper is the index: "<<index;
    return 0;
}

