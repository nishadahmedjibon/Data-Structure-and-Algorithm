problem link: https://leetcode.com/problems/maximum-beauty-of-an-array-after-applying-operation/?envType=problem-list-v2&envId=sliding-window

class Solution {
public:
    int maximumBeauty(vector<int>& nums, int k) {
        sort(nums.begin(), nums.end());
        int l=0,r=0, sum=0;
        while(r<nums.size())
        {
            while(nums[r]-nums[l]>2*k)
                l++;
            sum=max(sum, r-l+1);
            r++;
        }
        return sum;
    }
};
