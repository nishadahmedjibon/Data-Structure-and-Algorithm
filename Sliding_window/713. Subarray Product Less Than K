problem link: https://leetcode.com/problems/subarray-product-less-than-k/?envType=problem-list-v2&envId=sliding-window

class Solution {
public:
    
    int numSubarrayProductLessThanK(vector<int>& nums, int k) {
        if(k<=1)
            return 0;
        int l=0, r=0, mul=1, sum=0;
        while(r<nums.size())
        {
            mul*=nums[r];
            while(mul>=k)
            {
                mul=mul/nums[l];
                l++;
            }
            sum+=(r-l+1);
            r++;
        }
        return sum;
    }
};
